{
  "version": 2,
  "builds": [
    {
      "src": "apps/client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/server/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/server/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/client/$1"
    }
  ]
}
