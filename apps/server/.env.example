# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# Neon PostgreSQL Configuration
# DATABASE_URL: Use the Pooled connection string (Transaction Mode)
# DIRECT_URL: Use the Direct connection string (Session Mode) - Required for migrations
DATABASE_URL="postgres://user:password@ep-host.region.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgres://user:password@ep-host.region.neon.tech/neondb?sslmode=require&connect_timeout=0"

# YouTube API
# Get this from Google Cloud Console
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CHANNEL_HANDLE=@TAOSTUDIO_0

# JWT Secret for Authentication
JWT_SECRET=your_super_secret_jwt_key

# Cloudinary (File Uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (Nodemailer)
# Example for Gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
